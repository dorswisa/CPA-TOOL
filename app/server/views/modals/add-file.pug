#add-file-modal.modal.fade
    .modal-dialog
        .modal-content
            .modal-header(style="height: 80px")
                img(src='/css/logo.png' width='75' height='55' alt='logo' style="margin-left: 20px;")
                button.close(type='button' aria-label='Close' data-dismiss='modal' style='color: #F74040; outline: none; z-index:99')
                    span(style='font-size: 40px;') &times;
                h4(style="position: absolute; width: 100%; text-align:center; font-weight: bold; font-style: italic; font-size:32px;").modal-title Add File
            .modal-body(style='padding-bottom: 0; outline: none;')
                form(method="post")#add-file-form
                    label(style='padding-bottom: 10px; padding-top: 10px') Please enter your new password
                    .form-group
                        input#add-commit.form-control(name='add-commit' placeholder=' ' type='text' style='box-shadow: none;border-radius:0px; background-color: transparent; outline: none;')
                        label.input-form(for='add-commit') Commit
                    .form-group
                        input#change-month(type='checkbox' name='change-month')
                        label(for='change-month' style="margin-top: 0.2em;") Change Month?
                    .form-group
                        select#select-month.form-control(name='select-month' style='box-shadow: none;border-radius:0px; background-color: transparent; outline: none; color: light-grey; display:none;')
                            option(value='' disabled='' selected='' style='background: white;') Select Month
                            each item in months
                                option(style='background: white;' value=item)=item
            .modal-footer
                button#add-file-submit.btn.btfooter(type='submit' form="add-file-form") Add File