#send-modal.modal.fade
    .modal-dialog
        .modal-content
            .modal-header(style="height: 80px")
                img(src='/css/logo.png' width='75' height='55' alt='logo' style="margin-left: 20px;")
                button.close(type='button' aria-label='Close' data-dismiss='modal' style='color: #F74040; outline: none; z-index:99')
                    span(style='font-size: 40px;') &times;
                h4(style="position: absolute; width: 100%; text-align:center; font-weight: bold; font-style: italic; font-size:32px;")#send-modal-title.modal-title
            #send-modal-body.modal-body
            .modal-footer(style='padding-bottom: 20px;')
                button.submit.btn-danger#send-access(type='submit' style='margin: 0 auto; width: 200px; border-radius: 34rem;font-size: 14px; font-weight: bold; height: 46px; border: none; padding: 10px; margin-right: 5px;') Send
                button.btn-secondary(type='button' data-dismiss='modal' style='margin: 0 auto; width: 200px; border-radius: 34rem;font-size: 14px; font-weight: bold; height: 46px; border: none; padding: 10px;') Close
