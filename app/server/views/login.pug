extends layout

block content
    link(rel='shortcut icon' type='image/png' href='/css/logo.png')
    // log in form
    .login-form
        .content-former.cd-form
            form.cd-form#cd-login
                .modal-top
                    img(src='/css/logo.png' width='88' height='65' alt='logo')
                    h1(style="margin-left: 15px;") CPA Tool
                    h5(style="margin-left: 15px;") The Right Way To Manage Your Files
                div(style='padding-bottom: 10px')
                    h3
                        b(style="font-style: italic;") Login
                .form-group
                    input#login-email.form-control(name='login-email' placeholder=' ' type='email' required='' style='box-shadow: none;border-radius:0px')
                    label.input-form(for='login-email') Email
                .form-group
                    input#login-password.form-control(name='login-password' placeholder=' ' type='password' required='' style='box-shadow: none;border-radius:0px')
                    label.input-form(for='login-password') Password
                    .hide-password
                        img(src='/css/visibility.png')
                .form-group
                    input#remember-me(type='checkbox' name='remember-me' checked='')
                    label(for='remember-me' style="margin-top: 0.2em;") Remember me
                .cd_modal-footer
                    button.btn.btfooter(type='submit') SIGN-IN
        .cd-form-bottom-message
            a.cd-reset-password(href='#0') Forgot your password?
            |  |
            a.cd-signup(href='/signup')  Want to Sign-up?

    .cd-user-modal
        // this is the entire modal form, including the background
        .cd-user-modal-container
            include modals/reset-password

    include modals/error
    include modals/edit-password
    script(src='/js/signinup.js')

    if(popUpPass)
        script.
            $(document).ready(function () {
                $('#edit-password-modal').modal('show');
                $('#edit-password-modal .alert').hide()
            });
